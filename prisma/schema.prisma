generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Posts {
  id          Int           @id @default(autoincrement())
  title       String
  content     String
  creator     Users         @relation(fields: [creatorId], references: [id])
  creatorId   Int
  likes       Int           @default(0)
  dislikes    Int           @default(0)
  createdAt   DateTime      @default(now())
  tags        Tags[]
  comments    Comments[]
  PostComment PostComment[]
  PostTag     PostTag[]
}

model Users {
  id        Int        @id @default(autoincrement())
  name      String
  email     String
  avatar    String?
  hash      String
  posts     Posts[]
  comments  Comments[]
  createdAt DateTime   @default(now())
  Tags      Tags[]
}

model Comments {
  id          Int           @id @default(autoincrement())
  content     String
  dislikes    Int           @default(0)
  likes       Int           @default(0)
  creator     Users         @relation(fields: [creatorId], references: [id])
  creatorId   Int
  createdAt   DateTime      @default(now())
  post        Posts?        @relation(fields: [postId], references: [id])
  postId      Int
  PostComment PostComment[]
}

model PostComment {
  post      Posts    @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    Int
  comment   Comments @relation(fields: [commentId], references: [id], onDelete: Cascade)
  commentId Int

  @@id([postId, commentId])
}

model PostTag {
  post   Posts @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId Int
  tag    Tags  @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId  Int

  @@id([postId, tagId])
}

model Tags {
  id        Int       @id @default(autoincrement())
  title     String
  color     String
  creator   Users     @relation(fields: [creatorId], references: [id])
  creatorId Int
  posts     Posts[]
  PostTag   PostTag[]
}
